{
	"version": "2.0.0",
	"presentation": {
		"echo": false,
		"panel": "dedicated",
		"showReuseMessage": false,
		"clear": true,
		"close": true,
		"preserveTerminalName": true,
		"focus": true
	},
	"tasks": [
		{
			"label": "Build",
			"type": "shell",
			"command": "./.sh",
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"label": "prepareRunClientCompile",
			"type": "shell",
			"command": "./gradlew prepareRunClientCompile",
			"options": {
				"cwd": "${workspaceFolder}"
			}
		},
		{
			"label": "prepareRunDataCompile",
			"type": "shell",
			"command": "./gradlew prepareRunDataCompile",
			"options": {
				"cwd": "${workspaceFolder}"
			}
		},
		{
			"label": "prepareRunGameTestServerCompile",
			"type": "shell",
			"command": "./gradlew prepareRunGameTestServerCompile",
			"options": {
				"cwd": "${workspaceFolder}"
			}
		},
		{
			"label": "prepareRunServerCompile",
			"type": "shell",
			"command": "./gradlew prepareRunServerCompile",
			"options": {
				"cwd": "${workspaceFolder}"
			}
		}
	]
}